{
    "compilerOptions": {
        "target": "ES2024",
        "module": "ESNext",
        "declaration": true,
        "outDir": "dist",
        "sourceMap": false,
        "strict": true,
        "skipLibCheck": true,
        "exactOptionalPropertyTypes": true,
        "moduleResolution": "Node",
        "isolatedModules": true,
        "incremental": true
    },
    "include": ["src/**/*.ts"]
}